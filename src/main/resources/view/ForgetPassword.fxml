                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <Label layoutX="149.0" layoutY="271.0" opacity="0.8" style="-fx-text-fill: #2B2B2B;" text="instructions">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="lblError" layoutX="149.0" layoutY="576.0" prefHeight="18.0" prefWidth="451.0" />
         </children>
      </AnchorPane>
   </children>
